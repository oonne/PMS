{
  "name": "PMS",
  "description" : "PMS Chrome Extensions",
  "version": "0.2",
  "manifest_version": 3,
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "notifications",
    "bookmarks",
    "storage"
  ],
  "host_permissions": [
    "https://api.pms.oonne.com/",
    "https://qyapi.weixin.qq.com/"
  ],
  "chrome_url_overrides": {
    "newtab": "/newtab/index.html"
  },
  "options_ui": {
    "page": "/options/index.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "/background/index.js"
  }
}